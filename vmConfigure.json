{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmNameP": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "adminUsernameP": {
            "type": "string"
        },
        "adminPasswordP": {
            "type": "string"
        },
        "nicNameP": {
            "type": "string"
        },
        "storageNameP": {
            "type": "string"
        },

        "windowsOSP":{
            "type": "string"
        }

    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmNameP')]",
            "apiVersion": "2015-05-01-preview",
            "location": "eastus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServers",
                        "offer": "WindowsServer",
                        "sku": "[parameters('windowsOSP')]",
                        "version": "Standard"
                        
                    },
                    "osDisk": {
                        "osType": "windows",
                        "name": "[parameters('vmNameP')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://', parameters('storageNameP'), '.blob.core.windows.net', concat('/vhds/', parameters('vmNameP'),'.vhd'))]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vmNameP')]",
                    "adminUsername": "[parameters('adminUserNameP')]",
                    "adminPassword": "[parameters('adminPasswordP')]",
                    "windowsConfiguration":{
                        "provisionVMAgent":true,
                        "enableAutomaticUpdates":true
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicNameP'))]"
                        }
                    ]
                }
                
                
            }
        }
    ]
}
