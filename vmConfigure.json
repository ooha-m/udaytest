{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmNameP": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "adminUsernameP": {
            "type": "string"
        },
        "adminPasswordP": {
            "type": "string"
        },
        "nicNameP": {
            "type": "string"
        },
        "storageNameP": {
            "type": "string"
        },
        "imagePublisherP": {
            "type": "string"
        },
        "imageOfferP": {
            "type": "string"
        },
        "imageSKUP": {
            "type": "string"
        },
        "imageVersionP": {
            "type": "string"
        },
        "vmSizeP": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "eastus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "hortonworks",
                        "offer": "hortonworks-sandbox",
                        "sku": "sandbox25",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[parameters('vmNameP')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://', parameters('storageNameP'), '.blob.core.windows.net', concat('/vhds/', parameters('vmNameP'),'.vhd'))]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vmNameP')]",
                    "adminUsername": "[parameters('adminUserNameP')]",
                    "adminPassword": "[parameters('adminPasswordP')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicNameP'))]"
                        }
                    ]
                }
            }
        }
    ]
}
