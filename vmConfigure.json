{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
       "adminUsername":{
           "type": "string"
       },
        "adminPassword": {
            "type": "string"
        },
        "nicName": {
            "type": "string"
        },
        "storageName": {
            "type": "string"
        },
        "imagePublisher": {
            "type": "string"
        },
        "imageOffer": {
            "type": "string"
        },
        "imageSKU": {
            "type": "string"
        },
        "imageVersion": {
            "type": "string"
        },
        "vmSize": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
             
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "eastus",
            "plan": {
                "name": "sandbox25",
                "product": "hortonworks-sandbox",
                "publisher": "hortonworks"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "hortonworks",
                        "offer": "hortonworks-sandbox",
                        "sku": "sandbox25",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[parameters('vmName')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://', parameters('storageName'), '.blob.core.windows.net', concat('/vhds/', parameters('vmName'),'.vhd'))]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": []
                    
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
                        }
                    ]
                }
                    
                }
            }
        
    ]
}